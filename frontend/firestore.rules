rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Pre-registration collection - allow anyone to write (for email signups)
    match /preregistrations/{document} {
      // Allow reading (needed for duplicate email check)
      allow read: if true;
      
      // Allow creating new documents (email signups from website)
      allow create: if request.resource.data.email is string
                    && request.resource.data.email.size() > 0
                    && request.resource.data.source in ['hero', 'final_cta', 'navbar'];
      
      // Only admin can update/delete (via Firebase Console)
      allow update, delete: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
