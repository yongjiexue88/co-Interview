{
    "name": "co-interview",
    "productName": "Co-Interview",
    "version": "0.5.0",
    "description": "Co-Interview - AI Interview Assistant",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format:check": "prettier --check \"src/**/*.js\"",
        "format:fix": "prettier --write \"src/**/*.js\""
    },
    "keywords": [
        "co-interview",
        "interview assistant",
        "ai interview helper",
        "real-time interview ai",
        "interview preparation"
    ],
    "author": {
        "name": "sohzm",
        "email": "sohambharambe9@gmail.com"
    },
    "license": "GPL-3.0",
    "dependencies": {
        "@google/genai": "^1.2.0",
        "electron-squirrel-startup": "^1.0.1",
        "firebase": "^12.7.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.8.1",
        "@electron-forge/maker-deb": "^7.8.1",
        "@electron-forge/maker-dmg": "^7.8.1",
        "@electron-forge/maker-rpm": "^7.8.1",
        "@electron-forge/maker-squirrel": "^7.8.1",
        "@electron-forge/maker-zip": "^7.8.1",
        "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
        "@electron-forge/plugin-fuses": "^7.8.1",
        "@electron/fuses": "^1.8.0",
        "@eslint/js": "^9.39.2",
        "@reforged/maker-appimage": "^5.0.0",
        "@testing-library/dom": "^10.4.1",
        "electron": "^30.0.5",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.7.4"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/index.js",
            "!src/preload.js",
            "!src/assets/**",
            "!src/utils/renderer.js",
            "!src/utils/windowResize.js",
            "!src/components/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        }
    }
}